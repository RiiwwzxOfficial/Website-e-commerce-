<body>
    <div class="container">
        <h1>Payment Gateway</h1>
        <form id="paymentForm">
            <label for="amount">Jumlah Pembayaran (IDR):</label>
            <input type="number" id="amount" placeholder="Masukkan jumlah" required>

            <label for="cardNumber">Nomor Kartu:</label>
            <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456" required>

            <label for="expiry">Tanggal Kadaluarsa (MM/YY):</label>
            <input type="text" id="expiry" placeholder="MM/YY" required>

            <label for="cvv">CVV:</label>
            <input type="text" id="cvv" placeholder="123" required>

            <label for="method">Metode Pembayaran:</label>
            <select id="method" required>
                <option value="">Pilih Metode</option>
                <option value="credit">Kartu Kredit</option>
                <option value="debit">Kartu Debit</option>
                <option value="ewallet">E-Wallet</option>
            </select>

            <div id="errorMessage" class="error"></div>
            <button type="submit">Bayar Sekarang</button>
        </form>
    </div>

    <script>
        document.getElementById('paymentForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const amount = document.getElementById('amount').value;
            const cardNumber = document.getElementById('cardNumber').value;
            const expiry = document.getElementById('expiry').value;
            const cvv = document.getElementById('cvv').value;
            const method = document.getElementById('method').value;
            const errorMessage = document.getElementById('errorMessage');

            // Validasi sederhana
            if (!amount || !cardNumber || !expiry || !cvv || !method) {
                errorMessage.textContent = 'Semua field harus diisi!';
                return;
            }
            if (cardNumber.length < 16) {
                errorMessage.textContent = 'Nomor kartu tidak valid!';
                return;
            }

            // Simulasi pembayaran berhasil (dalam dunia nyata, kirim ke API gateway)
            alert('Pembayaran sebesar IDR ' + amount + ' berhasil! (Simulasi)');
            errorMessage.textContent = '';
        });
    </script>
</body>
