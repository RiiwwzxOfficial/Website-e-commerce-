    <script>
        // Fungsi untuk menyalin nomor rekening
        document.querySelectorAll('.copy-btn').forEach(button => {
            button.addEventListener('click', function() {
                const accountNumber = this.getAttribute('data-account');
                navigator.clipboard.writeText(accountNumber).then(() => {
                    // Tampilkan pesan sukses
                    const originalText = this.textContent;
                    this.textContent = 'Tersalin!';
                    this.style.background = 'linear-gradient(to right, #2ecc71, #27ae60)';
                    
                    setTimeout(() => {
                        this.textContent = originalText;
                        this.style.background = 'linear-gradient(to right, #3498db, #e74c3c)';
                    }, 2000);
                }).catch(err => {
                    console.error('Gagal menyalin: ', err);
                    alert('Gagal menyalin nomor. Silakan salin secara manual.');
                });
            });
        });
    </script>
